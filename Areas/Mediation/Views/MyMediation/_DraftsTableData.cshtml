<v-card width="100%">
    <v-card-title>
        <v-spacer></v-spacer>
        <v-text-field v-model="mediationsAsDrafts.search"
                      append-icon="mdi-magnify"
                      label="Търсене"
                      single-line
                      hide-details></v-text-field>
    </v-card-title>
    <v-data-table :headers="mediationsAsDrafts.headers"
                  :items="mediationsAsDrafts.data"
                  item-key="GUID"
                  class="elevation-1"
                  no-data-text="Няма намерени резултати"
                  :disable-sort="true"
                  :loading="mediationsAsDrafts.loadingTableData"
                  loading-text="Зареждане на данни"
                  :search="mediationsAsDrafts.search"
                  :footer-props="{itemsPerPageText: 'Редове на страница'}">
        <template v-slot:item="props">
            <tr class="cursor-pointer">
                <td @@click="props.expanded = !props.expanded">{{ props.item.CaseNumber }}</td>
                <td @@click="props.expanded = !props.expanded">{{ props.item.DateCreated }}</td>
                <td @@click="props.expanded = !props.expanded">{{ props.item.CaseStatusName }}</td>
                <td @@click="props.expanded = !props.expanded">{{ props.item.SubjectDispute}}</td>
                <td @@click="props.expanded = !props.expanded">{{ props.item.RespondingPartyUserName }}</td>
                <td @@click="props.expanded = !props.expanded">{{ props.item.MediatorName }}</td>
                <td align="right">
                    <div class="my-2">
                        <v-btn color="primary"
                               small
                               :href="'/Mediation/Case/Edit/' + props.item.GUID"
                               target="_blank">
                            Към Медиация&nbsp;
                            <i class="fa fa-external-link-alt"></i>
                        </v-btn>
                    </div>
                </td>
            </tr>
        </template>
    </v-data-table>
</v-card>