<template v-if="showEmployeeUploadCertificateField">
    <v-row>
        <v-col cols="12">
            <v-file-input v-model="certificateFile"
                          placeholder="Удостоверение*"
                          label="Файл"
                          prepend-icon="mdi-paperclip"
                          @*v-on:change="onCertificateUpload($event)"*@
                          class="px-4">
                <template v-slot:selection="{ text }">
                    <v-chip small
                            label
                            color="primary">
                        {{ text }}
                    </v-chip>
                </template>
            </v-file-input>
        </v-col>
    </v-row>
</template>