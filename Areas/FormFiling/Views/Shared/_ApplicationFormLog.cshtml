<v-simple-table>
    <template v-slot:default>
        <thead>
            <tr>
                <th class="text-left">Дата</th>
                <th class="text-left">Име</th>
                <th class="text-left">Фамилия</th>
                <th class="text-left">Действие</th>
                <th class="text-left">Съобщение</th>
                <th class="text-left"></th>
            </tr>
        </thead>
        <tbody>
            <tr v-for="(log, index) in formLog" :key="index">
                <td>{{ log.Timestamp }}</td>
                <td>{{ log.User.FirstName }}</td>
                <td>{{ log.User.LastName }}</td>
                <td>{{ log.ActionTypeName }}</td>
                <td>{{ log.Message }}</td>
                <td>
                    <v-btn v-if="log.ActionTypeGUID === revisionDialog.actionTypeApprove || log.ActionTypeGUID === revisionDialog.actionTypeRequestCorrection"
                           rounded
                           small
                           @@click="openChosenApplicationForm(log.FormRevisionGUID)"
                           target="_blank">
                        Покажи преди промени&nbsp;
                        <i class="fa fa-external-link-alt"></i>
                    </v-btn>
                </td>
            </tr>
        </tbody>
    </template>
</v-simple-table>