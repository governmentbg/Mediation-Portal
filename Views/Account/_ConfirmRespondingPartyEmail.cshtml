@{
    ViewBag.Title = "Успешно потвърждение на имейл";
}

<br />


<v-row>
    <v-col cols="12">
        <v-alert border="top"
                 type="success"
                 text
                 class="elevation-8">
            <span class="title">Вашият имейл адрес е успешно потвърден! Вече сте участник в медиацията.</span>
        </v-alert>
    </v-col>
</v-row>
<v-row>
    <v-col cols="12" class="text-center">
        <v-btn onclick="redirectToCase()"
               large
               color="primary">
            <v-icon left>mdi-redo-variant</v-icon>
            Продължи към медиация
        </v-btn>
    </v-col>
</v-row>



@section Scripts {
    @Scripts.Render("~/bundles/Vue")

    <script>
        function redirectToCase() {
            let caseGuid = window.location.pathname.split("/")[4].split('?')[0];
            window.location = "/Mediation/Case/Preview/" + caseGuid;
        }
    </script>
}
